rules_version = '2';

// Firebase Storage rules for BMed Prototype
// Supports multiple authentication methods: Google OAuth, Email/Password, Anonymous
service firebase.storage {
  match /b/{bucket}/o {
    // Sessions folder - authenticated users can access their own sessions
    match /sessions/{sessionId}/{allPaths=**} {
      // Allow authenticated users to read/write session files
      allow read, write: if request.auth != null;

      // For additional security, you could check session ownership:
      // allow read, write: if request.auth != null &&
      //   firestore.get(/databases/(default)/documents/sessions/{sessionId}).data.agentId == request.auth.uid;
    }

    // Test folder - for development/testing
    match /test/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // User profile images/avatars
    match /users/{userId}/{allPaths=**} {
      // Users can only access their own files
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Admin files - restricted access
    match /admin/{allPaths=**} {
      allow read, write: if request.auth != null &&
        request.auth.token.admin == true;
    }

    // Public files (if any)
    match /public/{allPaths=**} {
      allow read: if true;  // Public read access
      allow write: if request.auth != null;  // Authenticated write access
    }

    // Fallback - authenticated users only
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
